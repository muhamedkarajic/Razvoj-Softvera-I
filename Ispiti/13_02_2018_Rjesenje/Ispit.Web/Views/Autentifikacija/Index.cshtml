@model eUniverzitet.Web.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string error_poruka = (string)TempData["error_poruka"];
    Layout = "_LayoutAnonim";
}

<div class="col-md-4 col-md-offset-4">
   

    <form asp-action="Login" >

        <div class="form-group">
            <label>Username: </label>
            <div>
                <select asp-for="username" asp-items="@Model.usersList" class="form-control">
                    
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>Password: </label>
            <div>
                <input type="password" value="test" class="form-control" readonly="readonly"/>
            </div>
        </div >
        <input type="submit" value="Logiraj se" class="btn btn-danger form-control" />
    </form>

    @if (error_poruka != null)
    {
        <br/>
        <div class="alert alert-danger">
            @error_poruka
        </div>
    }
</div>  
